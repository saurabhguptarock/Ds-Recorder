{
  "name": "ds-recorder",
  "version": "0.1.0",
  "scripts": {
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "ng serve -c web -o",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && electron-builder build --linux",
    "electron:windows": "npm run build:prod && electron-builder build --windows",
    "electron:mac": "npm run build:prod && electron-builder build --mac",
    "publish": "npm run build:prod && electron-builder build --windows -p always",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install && npm start"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "saurabhguptarock",
        "repo": "Ds-Recorder",
        "releaseType": "release"
      }
    ],
    "appId": "com.saverl.ds_recorder",
    "productName": "DS Recorder",
    "copyright": "Copyright Â© year 2019 ${author}",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./src/assets/icons/icon.ico"
    },
    "nsis": {
      "installerIcon": "./src/assets/icons/icon.ico",
      "uninstallerIcon": "./src/assets/icons/icon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "uninstallDisplayName": "${productName} ${version}",
      "packElevateHelper": true,
      "unicode": true,
      "license": "./licence.txt"
    }
  },
  "description": "A Desktop screen recorder made with electron.",
  "homepage": "https://github.com/saurabhguptarock/Ds-Recorder",
  "author": {
    "name": "Saurabh",
    "email": "saurabhguptarock119@gmail.com"
  },
  "keywords": [
    "Ds Recorder",
    "Ds-Recorder",
    "Ds_Recorder",
    "Screen Recorder"
  ],
  "main": "main.js",
  "private": true,
  "devDependencies": {
    "@angular-builders/custom-webpack": "^9.0.0",
    "@angular-devkit/build-angular": "0.900.5",
    "@angular/animations": "9.0.5",
    "@angular/cli": "9.0.5",
    "@angular/common": "9.0.5",
    "@angular/compiler": "9.0.5",
    "@angular/compiler-cli": "9.0.5",
    "@angular/core": "9.0.5",
    "@angular/forms": "9.0.5",
    "@angular/language-service": "9.0.5",
    "@angular/platform-browser": "9.0.5",
    "@angular/platform-browser-dynamic": "9.0.5",
    "@angular/router": "9.0.5",
    "@types/bootstrap": "4.3.1",
    "@types/jasmine": "3.5.0",
    "@types/jasminewd2": "2.0.3",
    "@types/jquery": "3.3.33",
    "@types/node": "12.11.1",
    "bootstrap": "4.4.1",
    "codelyzer": "5.1.2",
    "electron": "8.1.0",
    "electron-builder": "22.4.0",
    "electron-reload": "1.5.0",
    "electron-updater": "4.2.4",
    "jasmine-core": "3.5.0",
    "jasmine-spec-reporter": "4.2.1",
    "jquery": "3.4.1",
    "karma": "4.3.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-coverage-istanbul-reporter": "2.1.0",
    "karma-jasmine": "2.0.1",
    "karma-jasmine-html-reporter": "1.4.2",
    "npm-run-all": "4.1.5",
    "perfect-scrollbar": "1.5.0",
    "protractor": "5.4.3",
    "rxjs": "6.5.4",
    "sweetalert2": "9.8.2",
    "ts-node": "8.3.0",
    "tslib": "1.10.0",
    "tslint": "5.18.0",
    "typescript": "3.7.5",
    "wait-on": "4.0.1",
    "zone.js": "0.10.2"
  }
}
